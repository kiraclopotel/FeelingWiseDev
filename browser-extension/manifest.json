{
  "manifest_version": 3,
  "name": "FeelingWise - Content Neutralizer",
  "version": "1.0.0",
  "description": "Removes emotional manipulation from social media content while preserving the message",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.facebook.com/*",
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content-scripts/common.js", "content-scripts/twitter.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content-scripts/common.js", "content-scripts/facebook.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-scripts/common.js", "content-scripts/youtube.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
