{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FeelingWise",
  "version": "1.0.0",
  "identifier": "com.feelingwise.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FeelingWise",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "title": "FeelingWise"
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "category": "Utility",
    "publisher": "FeelingWise",
    "copyright": "Copyright 2025 FeelingWise",
    "shortDescription": "Content neutralization that removes emotional manipulation",
    "longDescription": "FeelingWise is a content neutralization tool that uses local AI to remove emotional manipulation from social media content while preserving the original message, viewpoint, and factual claims. All processing happens on your device - your content never leaves your computer.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser"
      }
    }
  }
}
